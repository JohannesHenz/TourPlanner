<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.tourplanner.HelloController">

    <!-- Top Menu Bar -->
    <top>
        <MenuBar>
            <menus>
                <Menu text="File">
                    <items>
                        <MenuItem text="Open" />
                        <MenuItem text="Save" />
                        <MenuItem text="Exit" />
                    </items>
                </Menu>
                <Menu text="Edit">
                    <!-- Other menu items -->
                </Menu>
                <!-- Other menus -->
            </menus>
        </MenuBar>
    </top>

    <!-- Search Bar -->
    <center>
        <HBox>
            <BorderPane.margin>
                <Insets bottom="10" left="10" right="10" top="10" />
            </BorderPane.margin>
        </HBox>
    </center>

    <!-- Left Section for Tours -->
    <left>
        <VBox BorderPane.alignment="CENTER_LEFT">
            <BorderPane.margin>
                <Insets bottom="10" left="10" right="10" top="10" />
            </BorderPane.margin>
            <children>
                <Label text="Tours" />
                <ListView fx:id="tourList">
                    <!-- List of tours -->
                </ListView>
                <HBox>
                    <children>
                        <Button onAction="#addTour" text="+" />
                        <Button onAction="#editTour" text="Edit" />
                        <Button onAction="#deleteTour" text="Delete" />
                    </children>
                </HBox>
            </children>
        </VBox>
    </left>

    <!-- Tabs -->
    <center>
        <TabPane BorderPane.alignment="CENTER">
            <tabs>
                <Tab text="General">
                    <!-- General content -->
                </Tab>
                <Tab text="Route">
               <content>
                    <Pane prefHeight="329.0" prefWidth="784.0">
                     <children>
                        <ImageView fitHeight="349.0" fitWidth="784.0" layoutX="60.0" layoutY="50.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../../../Capture.JPG" />
                           </image>
                        </ImageView>
                     </children>
                  </Pane>
               </content></Tab>
                <Tab text="Misc">
                    <!-- Misc content -->
                </Tab>
            </tabs>
        </TabPane>
    </center>

    <!-- Tour Logs Section -->
    <bottom>
        <VBox BorderPane.alignment="BOTTOM_LEFT">
            <BorderPane.margin>
                <Insets bottom="10" left="10" right="10" top="10" />
            </BorderPane.margin>
            <children>
                <Label text="Tour Logs" />
                <TableView fx:id="tourLogTable">
                    <columns>
                        <TableColumn fx:id="dateColumn" prefWidth="150" text="Date" />
                        <TableColumn fx:id="timeColumn" prefWidth="150" text="Time" />
                        <TableColumn fx:id="commentColumn" prefWidth="250" text="Comment" />
                        <TableColumn fx:id="difficultyColumn" prefWidth="150" text="Difficulty" />
                        <TableColumn fx:id="totalDistanceColumn" prefWidth="150" text="Total Distance" />
                        <TableColumn fx:id="totalTimeColumn" prefWidth="150" text="Total Time" />
                        <TableColumn fx:id="ratingColumn" prefWidth="150" text="Rating" />
                    </columns>
                </TableView>
                <HBox>
                    <children>
                        <Button onAction="#onAddTourLogButtonClick" text="Add" />
                        <Button onAction="#onEditTourLogButtonClick" text="Edit" />
                        <Button onAction="#onDeleteTourLogButtonClick" text="Delete" />
                    </children>
                </HBox>
            </children>
        </VBox>
    </bottom>

</BorderPane>
